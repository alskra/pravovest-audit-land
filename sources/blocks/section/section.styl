.section
  padding rem(35px) 0

  &__header
    text-align center
    margin-bottom rem(30px)
    & {r}__title
      margin 0

  &__title
    font-size rem(26)
    font-weight 800
    text-transform uppercase
    color $black-1

  &__lead
    color #888
    font-size rem(22px)

  &__btns
    text-align center

  &__title-2
    margin-bottom 1.25em

  @media (min-width $screen-sm-min)
    &__title
      font-size rem(48)

    &_main
      & {r}__header
        text-align left

      & {r}__btns
        text-align left

  @media (min-width $screen-md-min)
    padding rem(55px) 0

    &__header
      margin-bottom rem(45px)