.write-item
  padding rem(30)
  background white
  border 2px solid #ccd2d7
  p
    &:last-child
      margin 0

  &__header
    display flex
    align-items flex-start
    margin-bottom 1.25rem

  &__icon
    flex none
    width rem(60)
    height rem(60)
    border-radius 50%
    margin-right ($grid-gutter-width/2)
    &:empty
      display flex
      justify-content center
      align-items center
      background #CCCCCC
      &:before
        content '120x120'
        font-size rem(12)

  &__title
    overflow hidden
    flex 1 1 auto
    align-self center
    color $black-1
    font-size rem(23px)
    font-weight 700
    margin 0

  &__footer
    text-align center
    margin-top rem(30px)

  &_small
    min-height 100%
    & {r}__title
      font-size rem(20)


