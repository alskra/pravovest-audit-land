.article-item
  display flex
  flex-flow column
  min-height 100%
  p
    display inline

  &__img-wrap
    flex none
    display block
    overflow hidden
    padding-top percentage(200/380)
    position relative
    margin-bottom rem(25px)
    &:hover, &:focus
      &~{r}__title {r}__title-link
        color $red-1

  &__img
    position absolute
    top 0
    left 0

  &__title
    flex none
    overflow hidden
    color $black-1
    font-size rem(23px)
    line-height 1.25em
    text-transform uppercase
    max-height 1.25em*2
    line-clamp 2
    margin 0 0 0.5em

  &__title-link
    display block
    color inherit
    text-decoration none
    &:hover, &:focus
      color $red-1
      text-decoration none

  &__description
    flex none
    overflow hidden
    line-height ($line-height-base)em
    max-height ($line-height-base)em*4
    line-clamp 4
    margin-bottom rem(30px)

  &__footer
    flex none
    text-align center
    margin-top auto